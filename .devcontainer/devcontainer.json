//devcontainer.json
{
    "name": "rpmbuild devcontainer",
    "dockerFile": "Dockerfile",
    "settings": {
        "terminal.integrated.automationShell.linux": "/bin/bash"
    },
    "extensions": [
        "LaurentTreguier.rpm-spec"
    ],
    "forwardPorts": [],
    "postCreateCommand": "sudo yum-builddep -y ../SPECS/profptd.spec; echo '%_topdir ${containerWorkspaceFolder}' >> ~/.rpmmacros",
    "remoteUser": "mockbuild"
}